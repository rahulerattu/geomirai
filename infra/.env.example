# ---------- GeoMirai FastAPI Backend (.env for app/) ----------

# PostgreSQL database connection (Render managed or external)
POSTGRES_DB=geomirai
POSTGRES_USER=geomirai_user
POSTGRES_PASSWORD=your_db_password_here
POSTGRES_HOST=your_db_host_here
POSTGRES_PORT=5432

# Set your preferred timezone
TZ=Asia/Kolkata

# Stripe payments (for paid diagnostic survey etc.)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Supabase/PostGIS (if using Supabase for spatial queries)
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_KEY=your_supabase_service_key

# S3 object storage (for COGs, data backbone)
S3_BUCKET=your_s3_bucket_name
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_REGION=ap-south-1

# NASA POWER API (weather data)
NASA_POWER_URL=https://power.larc.nasa.gov/api/endpoint

# ISRIC SoilGrids API (soil nutrients)
SOILGRIDS_URL=https://rest.soilgrids.org/query

# FAO Salinity API or dataset endpoint
FAO_SALINITY_URL=https://salinity.fao.org/api

# Agmarknet India market prices
AGMARKNET_URL=https://agmarknet.gov.in/api

# Vietnam VNF1 market prices
VNF1_URL=https://vnf1.gov.vn/api

# FAO GIEWS global market prices
FAO_GIEWS_URL=https://giews.fao.org/api

# Twilio WhatsApp alerts (for high-risk notifications)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+your_twilio_number

# Email (SMTP) settings (for paid survey ticketing)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email_username
SMTP_PASS=your_email_password
EMAIL_FROM=your_email@example.com

# n8n ETL webhook (for scheduled data ingest)
N8N_WEBHOOK_URL=https://your-n8n-service.onrender.com/webhook

# Application secret key (for JWT/auth/session)
SECRET_KEY=your_super_secret_key

# Optional: Additional crop/market APIs by country (for roadmap expansion)
THAILAND_MARKET_API_URL=https://thailand-market.gov/api
CAMBODIA_MARKET_API_URL=https://cambodia-market.gov/api

# Optional: Carbon credit MRV, Circular Economy APIs
CARBON_CREDIT_API_URL=https://carbon-credit.gov/api
BIOCHAR_API_URL=https://biochar.gov/api
MUSHROOM_SUBSTRATE_API_URL=https://mushroom.gov/api
BIOGAS_PLANT_API_URL=https://biogas.gov/api
PALLET_MAKING_API_URL=https://pallet.gov/api
RICE_BRAN_OIL_API_URL=https://ricebran.gov/api

# Optional: Ads/recommendation API for inputs marketplace
MARKETPLACE_ADS_API_URL=https://ads.geomirai.com/api

# Optional: Value-added products API
VALUE_ADDED_API_URL=https://products.geomirai.com/api

# ---------- End of .env.example ----------